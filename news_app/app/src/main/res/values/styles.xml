<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorLightWhite</item>
<!--        <item name="homeAsUpIndicator">@drawable/ic_arrow</item>-->
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--        <item name="android:textSize">20sp</item>-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="popupTheme" parent="AppTheme">
        <item name="android:popupBackground">#000</item>
    </style>


    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="textViewaddBill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">#0A0A0A</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="colorAccent">@color/ash_e6</item>
        <item name="colorControlActivated">@color/ash_e6</item>
        <item name="colorControlHighlight">@color/ash_e6</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="recyclerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="floatingActionButtonModel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="imageModel">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="tvModel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="tvTitleModel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="tvNameModel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#7f7f7f</item>
    </style>

    <style name="tvRedeemAmtModel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tvExpiryDateModel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="tvModel1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!--    <style name="pinView">-->
    <!--        <item name="android:layout_width">match_parent</item>-->
    <!--        <item name="android:layout_height">50dp</item>-->
    <!--        <item name="android:layout_centerInParent">true</item>-->
